@model PhucShop.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Assign role for user</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a style="text-decoration: none" asp-controller="Home" asp-action="Index">Home</a></li>
    </ol>
    <div class="row">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="User">Back to list</a>
        </div>
        <div class="col-md-4">
            <div class="col-md-4">
                <form asp-action="RoleAssign">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    @for (var i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-group">
                            <label class="control-label">
                                @Model.Roles[i].Name
                                <input type="checkbox" asp-for="Roles[i].Selected" />
                                <input type="hidden" asp-for="Roles[i].Id" />
                                <input type="hidden" asp-for="Roles[i].Name" />
                            </label>
                        </div>
                    }
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>